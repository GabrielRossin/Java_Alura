
public class Fatorial
{
	public static void main(String[] args)
	{
		int contador;
		int fatorial;
		int num;

		for(contador = 1; contador <= 10; contador++)
		{
			num = contador;
			fatorial = num;
			do
			{
				if(contador == 1)
				{
					fatorial = 1;
					num--;
				}
				else
				{
					num--;

					fatorial *= num;

				}

			}while(num > 1);

			System.out.println("O fatorial de "+ contador+ "Ã©: " + fatorial);

		}



	}

}
